<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#EDEDED"
    android:orientation="horizontal" >
        <ImageView
            android:id="@+id/id_iv_news"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/news_down" />
        <ImageView
            android:id="@+id/id_iv_select"
             android:layout_weight="1"
             android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/select_up" />
        <ImageView
            android:id="@+id/id_iv_picture"
             android:layout_weight="1"
             android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/picture_up" />
        <ImageView
            android:id="@+id/id_iv_bbs"
             android:layout_weight="1"
             android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/bbs_up" />

</LinearLayout>